
# If you come from bash you might have to change your $PATH.
# my alias
alias wifi='ifconfig wlan0'
alias cl='reset'
alias rt='rm * -rf'
alias ip='ip -color=auto'
alias diff='diff --color=auto'
alias wallpaper='feh --randomize --bg-scale ~/Pictures/*'
# ls
alias la='lsd -a'
alias lla='lsd -la'
alias ll='lsd -l'
alias ls='lsd'
alias cat='bat --theme TwoDark'
alias sd='doas'
alias rmdir='rm -rvdf'
alias rm='rm -f'
alias mutt='neomutt'
alias python="python2"
alias shred="shred -zf"
alias config='nvim ~/.zshrc' # Quick access to the ~/.zshrc file
alias wget="wget -U 'noleak'"
alias curl="curl --user-agent 'noleak'"
alias grep='grep --color'
alias cleansystemd='sudo journalctl --vacuum-size=1G --vacuum-time=5d --vacuum-files=5'
alias sgrep='grep -R -n -H -C 5 --exclude-dir={.git,.svn,CVS} '
alias gitdiff='git diff --color | diff-so-fancy'
alias clh="history -c;reset"
alias sthelp='cat ~/.config/st/man.md'
alias rm='rm -iv'
alias cp='cp -iv'
alias mv='mv -iv'
alias vi='nvim ./'
alias vim='nvim'
# alias to auto cd
alias hacking='cd ~/Desktop/.hacking/'
alias dev='cd ~/Desktop/dev/'
alias tools="cd ~/.tools/"
alias scripts="cd ~/scripts"
alias shinedown="cd ~/Music/shinedown/"
alias live="cd ~/Music/live/"
alias music="cd ~/Music/"
alias btw="echo 'I use Arch linux'"
alias startingstream='afk -k "starting soon" 0 7 00'
